
@model CheeseMVC.ViewModels.AddCheeseViewModel


<h1> Add Cheese </h1>

<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label><br />
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label><br />
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label><br />
        <select class="form-control" asp-for="Type" asp-items="Model.CheeseTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label><br />
        <input class="form-control" asp-for="Rating" />
        <span asp-validation-for="Rating"></span>
    </div>

    <input type="submit" value="Add Cheese" />
</form>
